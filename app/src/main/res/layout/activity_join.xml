<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sing_up">


    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="이름"
            android:ems="10"
            android:id="@+id/user_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="60dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:ems="10"
            android:id="@+id/user_password"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.419"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/user_name"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="이메일"
            android:ems="10"
            android:id="@+id/user_email" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintTop_toBottomOf="@+id/user_password_check" android:layout_marginTop="44dp"/>
    <Button
            android:textColor="#003F7F"
            android:background="@drawable/selector_view"
            android:text="회원가입"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/sing_up_button" android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_email" app:layout_constraintVertical_bias="0.893"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="비밀번호 확인"
            android:ems="10"
            android:id="@+id/user_password_check"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintTop_toBottomOf="@+id/user_password" android:layout_marginTop="40dp"/>

    <Button
            android:textColor="#003F7F"
            android:background="@drawable/selector_view"
            android:text="체크"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_email_check" app:layout_constraintStart_toEndOf="@+id/user_email"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.888" android:layout_marginTop="432dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/setImage"
            android:layout_width="56dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/user_password_check"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/user_email_check" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#003F7F"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintHorizontal_bias="0.497"/>

</android.support.constraint.ConstraintLayout>